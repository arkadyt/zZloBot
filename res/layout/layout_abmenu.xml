<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
        <Button
            android:id="@+id/ab_menu_btn_reference"
            style="@style/button_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_referice_i"
            android:gravity="center_vertical"
            android:text="Важно к прочтению!"
            android:textColor="@color/digits_color"
            android:textSize="16sp" />

        <Button
            android:id="@+id/ab_menu_btn_read_macro"
            style="@style/button_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_open_macro"
            android:gravity="center_vertical"
            android:text="Открыть бота"
            android:textColor="@color/digits_color"
            android:textSize="16sp" />

        <Button
            android:id="@+id/ab_menu_btn_analysing_freq"
            style="@style/button_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_edit_analysis_delays"
            android:gravity="center_vertical"
            android:text="Частота анализа состояния   "
            android:textColor="@color/digits_color"
            android:textSize="16sp" />

</LinearLayout>